{
  "type": "record",
  "name": "FlightPosition",
  "namespace": "com.flight.analytics",
  "fields": [
    {
      "name": "flight_id",
      "type": "string",
      "doc": "Unique identifier for the flight (e.g., ICAO24 code)"
    },
    {
      "name": "callsign",
      "type": ["null", "string"],
      "default": null,
      "doc": "Flight callsign or number"
    },
    {
      "name": "latitude",
      "type": "double",
      "doc": "Current latitude position"
    },
    {
      "name": "longitude",
      "type": "double",
      "doc": "Current longitude position"
    },
    {
      "name": "altitude",
      "type": "float",
      "doc": "Altitude in meters"
    },
    {
      "name": "speed",
      "type": "float",
      "doc": "Ground speed in m/s"
    },
    {
      "name": "heading",
      "type": "float",
      "doc": "Direction of flight in degrees"
    },
    {
      "name": "vertical_rate",
      "type": ["null", "float"],
      "default": null,
      "doc": "Vertical rate in m/s (positive for climb, negative for descent)"
    },
    {
      "name": "timestamp",
      "type": {
        "type": "long",
        "logicalType": "timestamp-millis"
      },
      "doc": "Timestamp when the position was recorded"
    },
    {
      "name": "origin",
      "type": ["null", "string"],
      "default": null,
      "doc": "Origin airport code"
    },
    {
      "name": "destination",
      "type": ["null", "string"],
      "default": null,
      "doc": "Destination airport code"
    },
    {
      "name": "squawk",
      "type": ["null", "string"],
      "default": null,
      "doc": "Transponder squawk code"
    }
  ]
}